@model Job_Hunter_Trapper_Keeper.Models.ViewModels.JobAddNoteViewModel

@{
    ViewData["Title"] = "AddNote";
}

<h2>Add Note for @Model.JobTitle</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNote" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Note" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
